{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/zxing_reader.wasm", "destination": "/zxing_reader.wasm" },
    { "source": "/((?!api|zxing_reader.wasm).*).*", "destination": "/public/index.html" }
  ],
  "functions": {
    "api/**/*.js": {
      "includeFiles": "public/zxing_reader.wasm"
    }
  }
}