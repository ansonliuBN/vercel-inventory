{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/zxing_reader.wasm", "destination": "/zxing_reader.wasm" },

    { "source": "/scan.html", "destination": "/scan.html" },
    { "source": "/transfer.html", "destination": "/transfer.html" },
    { "source": "/consume.html", "destination": "/consume.html" },

    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/**/*.js": {
      "includeFiles": "public/zxing_reader.wasm"
    }
  }
}
